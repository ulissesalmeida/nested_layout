<%= render_layout "app.html", assigns do %>
  <h1>Help</h1>

  <ul class="list-group pull-left" style="width: 20%">
    <li class="list-group-item">
      <%= link "About us", to: help_path(@conn, :about) %>
    </li>
    <li class="list-group-item">
      <%= link "FAQ", to: help_path(@conn, :faq) %>
    </li>
    <li class="list-group-item">
      <%= link "Contact", to: help_path(@conn, :contact) %>
    </li>
  </ul>

  <div class="panel panel-default pull-right" style="width: 70%">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @title %></h3>
    </div>
    <div class="panel-body">
      <%= render @view_module, @view_template, assigns %>
    </div>
  </div>
<% end %>
